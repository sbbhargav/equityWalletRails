
<div class="d-grid gap-3  m-5">
	<h1>Transactions of <%= @stock.companyname%></h1>

	<div class="d-flex justify-content-around">
		<%= link_to "new transcation", new_stock_transaction_path(@stock,@transaction), class: 'btn btn-primary'%> 
		<%= back_link(stock_path(@stock)) %>
	</div>


	
		<% @transactions.each do |transaction|%>
			
			<div class="card w-100">
				<div class="card-body d-flex justify-content-between">
					<h5 class="card-title"><%= transaction.status%></h5>
					<p class="card-text"><%= transaction.no_of_stocks%> stocks</p>
					<div class="row-arrang">
						<%= show_link([@stock,transaction],'btn btn-secondary') %>
						<%= edit_link(edit_stock_transaction_path(@stock,transaction),'btn btn-secondary') %>
						<%= delete_link([@stock,transaction],'btn btn-secondary') %>
					</div>
				</div>
			</div>

		<% end %>
		

	<%= will_paginate @transactions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

</div>




