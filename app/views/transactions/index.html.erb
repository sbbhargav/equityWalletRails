
<div class="arrangement">
	<h1>Transactions of <%= @stock.companyname%></h1>

	<div class="d-flex justify-content-around">
		<%= link_to "new transcation", new_stock_transaction_path(@stock,@transaction), class: 'btn btn-primary'%> 

		<%= link_to 'back',stock_path(@stock), class: 'btn btn-primary'%>
	</div>


	<div class="d-flex flex-column justify-content-around arrangement text-center">
		<% @transactions.each do |transaction|%>
			
			<div class="card w-100">
				<div class="card-body d-flex justify-content-between">
					<h5 class="card-title"><%= transaction.status%></h5>
					<p class="card-text"><%= transaction.no_of_stocks%> stocks</p>
					<div class="d-flex justify-content-md-around row-arrang">
								<%= link_to 'show', [@stock,transaction], class: 'btn btn-secondary'%>
								<%= link_to 'edit', edit_stock_transaction_path(@stock,transaction),class: 'btn btn-secondary'%>
								<%= button_to 'delete',[@stock,transaction], method: :delete,class: 'btn btn-secondary' %>
					</div>
				</div>
			</div>

		<% end %>
	</div>
</div>



