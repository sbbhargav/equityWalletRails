
<div class="d-grid gap-3  m-5 border border-dark p-3">
	<h1>Stocks of <%= current_user.username %> </h1>
  
	<div>
		<%= link_to 'Add Stock', new_stock_path, class: 'btn btn-primary' %>
	</div>
	
	<div class="card w-100">
		<div class="card-header d-flex justify-content-between flex-wrap bg-info">
			<h3>CompanyName</h3>
			<h3 class="px-md-5">Options</h3>
		</div>
	</div>

	<% @stocks.each do |stock| %>

		<div class="card w-100">
			<div class="card-body d-flex justify-content-between flex-wrap">
				<h5 class="card-title"><%= link_to stock.companyname, stock %></h5>
				<div class="row-arrang">
					<%= show_link(stock_path(stock),'btn btn-primary') %>
					<%= edit_link(edit_stock_path(stock),'btn btn-primary') %>
					<%= delete_link(stock_path(stock),'btn btn-primary') %>
				</div>
			</div>
		</div>
	  
		
	<% end %>

	<%= will_paginate @transactions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

  
</div>





