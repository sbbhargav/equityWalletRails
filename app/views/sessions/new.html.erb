
<div class="row justify-content-center mt-5 border border-info p-3">
	<h1>Sign In Page</h1>
	
	<%= form_with(url: sessions_path, data: { turbo: false },class: "col-md-6 col-md-offset-3 d-grid gap-2") do |form| %>

		<div class="form-outline mb-4">
			<%= form.label :email%>
			<%= form.text_field :email, class: "form-control", required: true %>
		</div>

		<div class="form-outline mb-4">
			<%= form.label :password%><br>
			<%= form.password_field :password,class: "form-control",required: true %>
		</div>

		<div>
			<%= form.submit 'Log In',class: "btn btn-primary btn-block mb-4" %>
		</div>
		
		<div class="text-center">
			<p>Not a member? <%= link_to "Register", sign_up_path %> </p>
		</div>
		
	<% end %>
</div>


